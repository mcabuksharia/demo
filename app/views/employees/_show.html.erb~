<script type='text/javascript'>
    $(document).ready(function() { 
        $("#myTable").tablesorter({ 
            //for example we want to disable the 
            //password column (5th column) from sorting
            //we will specify '4' since it was indexed
            //(count starts at '0')
            //and set its property to 'false'
            headers: { 
                1: {    
                    sorter: false 
                }
            }
              
        }); 
    });
</script>


